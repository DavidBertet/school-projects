#! /bin/sh

echo 'NAME_CHIEF=gallet_c' > makefile.rules
echo 'NAME_PROJECT=rush' >> makefile.rules
echo 'NAME_TARGET=rjv' >> makefile.rules
echo 'NAME_COMP_TAR=j' >> makefile.rules
echo 'NAME_EXT_TAR=bz2' >> makefile.rules
echo 'NAME_DIR_TAR=$(NAME_CHIEF)-$(NAME_PROJECT)' >> makefile.rules
echo 'NAME_TAR=$(NAME_DIR_TAR).tar.$(NAME_EXT_TAR)' >> makefile.rules
echo 'CC=gcc' >> makefile.rules
echo 'CFLAGS=-Wall -W -Werror -ansi -pedantic -std=c99' >> makefile.rules
echo 'MAKE=make' >> makefile.rules
echo 'MAINC=main.c menu.c mainloop.c draw.c font.c init_struct.c add_bullet.c add_ship.c delete_struct.c physik_engin.c textures.c move.c parser.c gun.c hud.c background.c keyboard.c' >> makefile.rules
echo 'MAINO=$(MAINC:.c=.o)' >> makefile.rules
echo 'HEADERS_DOC=src/inc.h src/struct.h src/const.h src/func.h' >> makefile.rules
